{
  "manifest_version": 3,
  "name": "Velto Sales Coach",
  "description": "AI-powered real-time sales coaching overlay for live call assistance",
  "version": "1.0.0",
  "permissions": ["activeTab", "storage", "tabCapture", "sidePanel"],
  "optional_permissions": ["audioCapture"],
  "host_permissions": ["https://*.up.railway.app/*", "wss://*.up.railway.app/*", "https://storage.googleapis.com/*"],
  "action": {
    "default_title": "Velto Sales Coach",
    "default_icon": { "16": "icons/icon16.png", "48": "icons/icon48.png", "128": "icons/icon128.png" }
  },
  "side_panel": { "default_path": "sidepanel.html" },
  "options_ui": { "page": "options.html" },
  "background": { "service_worker": "background.js" },
  "content_scripts": [{ "matches": ["<all_urls>"], "js": ["content.js"] }],
  "icons": { "16": "icons/icon16.png", "48": "icons/icon48.png", "128": "icons/icon128.png" },
  "content_security_policy": { "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'" }
}
